<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/andback"
    tools:context=".login">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firsttxt"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="Sign up"
        android:textSize="40dp"
        />


    <EditText
        android:id="@+id/userName2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firsttxt"
        android:layout_margin="10dp"
        android:background="#38ffffff"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="20dp"
        android:hint="Username"
        android:padding="20dp"
        android:textColorHint="@color/white"
        android:textSize="15dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_below="@+id/userName2"
        android:id="@+id/email"
        android:layout_margin="10dp"
        android:background="#38ffffff"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="20dp"
        android:padding="20dp"
        android:textColorHint="@color/white"
        android:textSize="15dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Passworrd"
        android:layout_below="@+id/email"
        android:id="@+id/pass"
        android:layout_margin="10dp"
        android:background="#38ffffff"
        android:drawableLeft="@drawable/padlock"
        android:drawablePadding="20dp"
        android:padding="20dp"
        android:textColorHint="@color/white"
        android:inputType="textPassword"
        android:textSize="15dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Passworrd Again"
        android:layout_below="@+id/pass"
        android:id="@+id/passver"
        android:layout_margin="10dp"
        android:background="#38ffffff"
        android:drawableLeft="@drawable/padlock"
        android:drawablePadding="20dp"
        android:padding="20dp"
        android:textColorHint="@color/white"
        android:inputType="textPassword"
        android:textSize="15dp"
        />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Sign Up"
    android:id="@+id/btnsign"
    android:onClick="btnOnCLick"
    android:layout_below="@+id/passver"
    android:layout_alignParentRight="true"
    android:textStyle="bold"
    android:layout_margin="10dp"
    android:background="#38ffffff"
    android:drawablePadding="20dp"
    android:padding="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:onClick="backOnCLick"
        android:layout_below="@+id/passver"
        android:layout_alignParentLeft="true"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:background="#38ffffff"
        android:drawablePadding="20dp"
        android:padding="20dp"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/hide"
        android:layout_below="@+id/passver"
        android:textStyle="bold"
        android:gravity="center_vertical|center_horizontal"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:drawablePadding="20dp"
        android:padding="20dp"
        android:onClick="showhide"
        android:id="@+id/showhideid"/>

</RelativeLayout>